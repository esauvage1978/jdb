{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Changer votre mot de passe {% endblock %}


{% block menu %}
    {{ include('structure/_menu_entry.html.twig',{anchor:path('profil_home'), name:'Profil'}) }}
    {{ include('structure/_menu_entry.html.twig',{anchor:'#create', name:'Changer'}) }}
{% endblock %}

 
{% block body %}
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">

            <!-- Masthead Avatar Image -->

            <!-- Masthead Heading -->
            <h1 class="masthead-heading text-uppercase mb-0">Mot de passe</h1>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Masthead Subheading -->

        </div>
    </header>
    <section class="page-section" id="create">
    <div class="container">
    <div class="row justify-content-center">
        <div class="col-xs-12 col-lg-6  ">

            <div class="card card-info">
                <div class="card">
                    <div class="card-body">
                        {{ form_start(form) }}
                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.plainPasswordOld) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.plainPassword) }}
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                {{ form_row(form.plainPasswordConfirmation) }}
                            </div>
                        </div>

                        <p class="text-center">
                            <button name="change" id="recover" class="btn btn-primary mb-4">
                                Mettre à jour
                            </button>
                        </p>
                        {{ form_end(form) }}

                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
    </section>
{% endblock %}