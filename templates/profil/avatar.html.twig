{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} Changer votre avatar {% endblock %}

{% block menu %}
    {{ include('structure/_menu_entry.html.twig',{anchor:path('profil_home'), name:'Profil'}) }}
    {{ include('structure/_menu_entry.html.twig',{anchor:'#create', name:'Changer'}) }}
{% endblock %}

{% block stylesheets %}
    <link href="{{ absolute_url( asset('/vendor/croppie/croppie.css')) }}" rel="stylesheet"/>
{% endblock %}

{% block javascripts %}
    <script src="{{ absolute_url( asset('/vendor/croppie/croppie.js')) }}"></script>

    <script>

        $('#use').fadeOut();
        $('#my-image').fadeOut();

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#my-image').attr('src', e.target.result);
                    var resize = new Croppie($('#my-image')[0], {
                        viewport: {width: 100, height: 100},
                        boundary: {width: 300, height: 300},
                        showZoomer: true,
                        enableResize: false,
                        enableExif: true,
                        enableOrientation: false
                    });
                    $('#use').fadeIn();
                    $('#use').on('click', function () {
                        resize.result('base64').then(function (dataImg) {
                            var data = [{image: dataImg}, {name: 'myimgage.jpg'}];
                            // use ajax to send data to php
                            $('#result').attr('src', dataImg);
                            var r = confirm('êtes vous sûr de vouloir modifier votre avatar ?');
                            if (r) {
                                $.ajax({
                                    type: 'POST',
                                    dataType: 'json',
                                    url: '{{ absolute_url(path('profil_avatar_update')) }}',
                                    data: 'dataImg=' + dataImg,
                                    success: function (data) {
                                        $('#retourDataImg').text(data.retour);
                                        window.location.href = '{{ path('profil_home') }}';
                                    },
                                    error: function (resultat, statut, erreur) {
                                        alert('error' + erreur);
                                    }
                                });
                            }
                        })
                    })
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        $("#imgInp").change(function () {
            $("#my-image-container").text("");
            $("#my-image-container").append("<img id=\"my-image\" src=\"#\"/>");

            readURL(this);
        });
    </script>
{% endblock %}



{% block body %}
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">

            <!-- Masthead Avatar Image -->

            <h1 class="masthead-heading text-uppercase mb-0">Avatar</h1>

            <!-- Masthead Heading -->

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

        </div>
    </header>
    <section class="page-section" id="create">
        <div class="container">
            <div class="row">
                <div class="card-body col-4 m-auto">

                    <form method="post">


                        <div class="row">
                            <div class="col-md-12">
                                <div class="form-group">
                                    <input type='file' id="imgInp"/>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div id="my-image-container" class="form-group">
                                </div>
                            </div>
                        </div>


                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >


                    </form>

                    <p class="text-center">
                        <button class="btn btn-lg btn-secondary  mb-4" id="use" name="use" type="submit">
                            {{ 'Update' | trans }}
                        </button>
                    </p>
                    <div class="d-none">
                        <img id="result" src="" alt="résultat"/>
                    </div>
                    <span id="retourDataImg"> </span>
                </div>
            </div>
        </div>
        </div>
        </div>
    </section>

{% endblock %}
