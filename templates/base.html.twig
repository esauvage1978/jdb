<!DOCTYPE html>
<html lang="fr">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Site vitrine d'Emmanuel SAUVAGE - Manuso">
    <meta name="author" content="Emmanuel SAUVAGE">

    <title>MANUSO - {% block title %} {% endblock %}</title>

    <!-- Custom fonts for this theme -->
    <link href="{{ absolute_url( asset('vendor/fontawesome-free/css/all.min.css'))}}" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic" rel="stylesheet"
          type="text/css">

    <!-- Theme CSS -->
    <link href="{{ absolute_url( asset('css/freelancer.css')) }}" rel="stylesheet">
    <link rel="icon" type="image/png" href="{{ absolute_url( asset('img/icone.png'))}}"/>
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/select2/css/select2.min.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/summernote/summernote-bs4.css')) }}">
    <link rel="stylesheet" href="{{ absolute_url( asset('plugins/icheck-bootstrap/icheck-bootstrap.min.css')) }}">
    <meta name="theme-color" content="#2c3e50">
    {% block stylesheets %}{% endblock %}
</head>

<body id="page-top">

<!-- Navigation -->
<nav class="navbar navbar-expand-lg bg-secondary text-uppercase fixed-top" id="mainNav">
    <div class="container">
        <a class="navbar-brand js-scroll-trigger" href="{{ path('home') }}#page-top">
            <img src="{{ absolute_url( asset('img/logo.png')) }}" alt="logo">
        </a>
        <button class="navbar-toggler navbar-toggler-right text-uppercase font-weight-bold bg-primary text-white rounded"
                type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive"
                aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ml-auto">
                {% block menu %}
                {% endblock %}

                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <li class="nav-item mx-0 mx-lg-1">
                        <a class="nav-link py-3 px-0 px-lg-3 rounded js-scroll-trigger" href="{{ path('user_logout') }}">
                            <i class="nav-icon fa fa-sign-out-alt"></i> Déconnexion
                        </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{% set col_primary="col-sm-12 col-md-8 col-lg-8 col-xl-6" %}
{% set col_secondary="col-sm-12 col-md-4 " %}
{% set col_primary_9="col-sm-12 col-md-9" %}
{% set col_secondary_3="col-sm-12 col-md-3" %}

{% block body %}
{% endblock %}

<!-- Contact Section -->


<!-- Footer -->
<footer class="footer text-center">
    <div class="container">
        <div class="row">

            <!-- Footer Location -->
            <div class="col-lg-4 mb-5 mb-lg-0">
                <h4 class="text-uppercase mb-4">Adresse</h4>
                <p class="lead mb-0">Erquinghem-Lys
                    <br>Hauts de France</p>
            </div>

            <!-- Footer Social Icons -->
            <div class="col-lg-4 mb-5 mb-lg-0">

                <a class="btn btn-outline-light btn-social mx-1" href="https://www.linkedin.com/in/emmanuelsauvage1978"
                   target="_blank">
                    <i class="fab fa-fw  fa-linkedin-in"></i>
                </a>
                <a class="btn btn-outline-light btn-social mx-1" href="https://twitter.com/esauvage1978" target="_blank">
                    <i class="fab fa-fw  fa-twitter"></i>
                </a>

                <a class="btn btn-outline-light btn-social mx-1" href="https://github.com/esauvage1978" target="_blank">
                    <i class="fab fa-fw  fa-github"></i>
                </a>
            </div>

            <!-- Footer About Text -->
            <div class="col-lg-4">
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class="image">
                        <a href="{{ path('profil_home') }}" class="d-block adark">
                            <img src="{{ app.user.avatar.image }}" class="rounded " alt="User Image">
                        </a>
                    </div>
                    <div class="info">
                        <a href="{{ path('profil_home') }}" class="d-block adark">
                            {{ app.user.name }}
                        </a>
                    </div>
                {% else %}
                    <div class="image">
                        <img src="{{ absolute_url( asset('dist/img/avatar5.png')) }}" class="img-circle elevation-2"
                             alt="User Image">
                    </div>
                    <div class="info">
                        <a href="{{ path('user_login') }}" class="d-block">Non connecté</a>
                    </div>
                {% endif %}
            </div>

        </div>
    </div>
</footer>

<!-- Copyright Section -->
<section class="copyright py-4 text-center text-white">
    <div class="container">
        <small>Copyright &copy; Manuso 2020</small>
    </div>
</section>

<!-- Scroll to Top Button (Only visible on small and extra-small screen sizes) -->
<div class="scroll-to-top d-lg-none position-fixed ">
    <a class="js-scroll-trigger d-block text-center text-white rounded" href="#page-top">
        <i class="fa fa-chevron-up"></i>
    </a>
</div>

<!-- Bootstrap core JavaScript -->
<script src="{{ absolute_url( asset('vendor/jquery/jquery.min.js'))}}"></script>
<script src="{{ absolute_url( asset('vendor/bootstrap/js/bootstrap.bundle.min.js'))}}"></script>

<!-- Plugin JavaScript -->
<script src="{{ absolute_url( asset('vendor/jquery-easing/jquery.easing.min.js'))}}"></script>

<!-- Contact Form JavaScript -->
<script src="{{ absolute_url( asset('js/jqBootstrapValidation.js'))}}"></script>
<script src="{{ absolute_url( asset('js/contact_me.js'))}}"></script>

<!-- Summernote -->
<script src="{{ absolute_url( asset('plugins/summernote/summernote-bs4.min.js')) }}"></script>
<script src="{{ absolute_url( asset('plugins/summernote/lang/summernote-fr-FR.js')) }}"></script>
<script src="{{ absolute_url( asset('plugins/select2/js/select2.min.js')) }}"></script>
<script src="{{ absolute_url( asset('plugins/select2/js/i18n/fr.js')) }}"></script>

<!-- Custom scripts for this template -->
<script src="{{ absolute_url( asset('js/freelancer.min.js'))}}"></script>

<script>
    $(function () {
        // Summernote
        $('.textarea').summernote({
            lang: 'fr-FR'
        });

        //$('div.form-check').addClass('icheck-primary d-inline');
        $('div.form-check').addClass('custom-switch custom-switch-off-danger custom-switch-on-success');
        $('input.form-check-input').addClass('custom-control-input');
        $('label.form-check-label').addClass('custom-control-label');

        $('[data-toggle="tooltip"]').tooltip();
    });

    $(document).ready(function() {
        $('.select2').select2({
            language: "fr",
            theme: 'bootstrap4'
        });

        $('.select2').addClass('bg-white col');
        $('.select2-selection__choice').addClass('bg-light');
    });
</script>

{% block javascripts %}{% endblock %}
</body>

</html>
