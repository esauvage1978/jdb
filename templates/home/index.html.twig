{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} - Accueil
{% endblock %}


{% block menu %}
    {{ include('structure/_menu_entry.html.twig',{anchor:'#project', name:'Projets'}) }}
{% endblock %}

{% block body %}
    <header class="masthead bg-primary text-white text-center">
        <div class="container d-flex align-items-center flex-column">
            <!-- Masthead Heading -->
            <h1 class="masthead-heading text-uppercase mb-0">Journal De Bord</h1>

            <!-- Icon Divider -->
            <div class="divider-custom divider-light">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Masthead Subheading -->
            <p class="masthead-subheading font-weight-light mb-0">Suivi de l'activit√© quotidienne</p>

        </div>
    </header>

    <!-- Project Section -->
    <section class="page-section portfolio" id="project">
        <div class="container">

            <!-- Portfolio Section Heading -->
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Projets</h2>

            <!-- Icon Divider -->
            <div class="divider-custom">
                <div class="divider-custom-line"></div>
                <div class="divider-custom-icon">
                    <i class="fas fa-star"></i>
                </div>
                <div class="divider-custom-line"></div>
            </div>

            <!-- Portfolio Grid Items -->
            <div class="row">

                <!-- Portfolio Item 1 -->
                <div class="col-md-6 col-lg-4">
                    <div class="portfolio-item mx-auto">
                        <a href="{{path('project_add')}}">
                        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                            <div class="portfolio-item-caption-content text-center text-white">
                                <i class="fas fa-plus fa-3x"></i>
                                <br/>Ajouter un projet
                            </div>
                        </div>
                        <img class="img-fluid" src="{{ absolute_url( asset('img/project.jpg'))}}" alt="">
                        </a>
                    </div>
                </div>

                {%  for project in projects %}
                <div class="col-md-6 col-lg-4">
                    <div class="portfolio-item mx-auto" data-toggle="modal" >
                        <a href="{{path('project_show',{id:project.id})}}">
                        <div class="portfolio-item-caption d-flex align-items-center justify-content-center h-100 w-100">
                            <div class="portfolio-item-caption-content text-center text-white">
                                <i class="fas fa-eye fa-3x"></i>
                                <br/>{{ project.name }}
                            </div>
                        </div>
                        <img class="img-fluid" src="{{ absolute_url( asset('img/project_default.jpg'))}}" alt="">
                        </a>
                    </div>
                </div>
                {% endfor %}



            </div>
            <!-- /.row -->

        </div>
    </section>

{% endblock %}
