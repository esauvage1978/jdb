<div class="card-body">

    <div class="form-group row">
        {{ form_label(form.name,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col">
            {{ form_errors(form.name) }}
            {{ form_widget(form.name) }}
        </div>
    </div>
    <div class="form-group row">
        {{ form_label(form.ref,'', { 'label_attr': {'class':'col-sm-3 col-form-label' }}) }}
        <div class="col">
            {{ form_errors(form.ref) }}
            {{ form_widget(form.ref) }}
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label" for="{{ form.enable.vars.id }}">
            Afficher
        </label>
        <div class="col mt-1">
            {{ form_row(form.enable) }}
        </div>

        <label class="col-sm-3 col-form-label" for="{{ form.alterable.vars.id }}">
            Administrable
        </label>
        <div class="col mt-1" data-toggle="tooltip" data-html="true"
             title="Permet au gestionnaire local associé à cet organisme d'en administrer les corbeilles" data-placement="right">
            {{ form_row(form.alterable) }}
        </div>
    </div>
    {{ form_row(form.content) }}

</div>